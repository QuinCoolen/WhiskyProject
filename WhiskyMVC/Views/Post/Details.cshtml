@model WhiskyMVC.Models.PostViewModel

@{
    ViewData["Title"] = "Post Details";
}

<div class="text-center">
    <h1 class="display-4">Post Details</h1>
</div>

<div class="container">
    <div style="background-color: #3e3e3e; color: #f8f9fa;">
        <div class="card-body">
            <h3 class="card-title">@Model.Description</h3>
            <h5 class="mb-2 text-white">Rating: @Model.Rating</h5>

            <h5>Whisky Details</h5>
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Name:</strong> @Model.Whisky.Name</p>
                    <p><strong>Age:</strong> @Model.Whisky.Age years</p>
                    <p><strong>Region:</strong> @Model.Whisky.Region</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Year:</strong> @Model.Whisky.Year</p>
                    <p><strong>Country:</strong> @Model.Whisky.Country</p>
                </div>
            </div>

            @if (User.Identity.IsAuthenticated && User.Identity.Name == Model.User.UserName)
            {
                <div class="mt-4 d-flex justify-content-end gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit Post</a>
                </div>
            }
            else
            {
                <div class="mt-4 d-flex justify-content-end gap-2">
                    <a asp-controller="User" asp-action="ViewProfile" asp-route-id="@Model.UserId" class="btn btn-primary">Go to Profile</a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

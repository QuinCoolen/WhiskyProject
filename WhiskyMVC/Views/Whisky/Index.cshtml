@model List<WhiskyMVC.Models.WhiskyViewModel>

@{
    ViewData["Title"] = "Whisky Home Page";
}

<div class="text-center">
    <h1 class="display-4">Whiskys Website</h1>
</div>

<div>
    <h2>Whiskys</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Year</th>
                <th>Country</th>
                <th>Region</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var whisky in Model)
            {
                <tr>
                    <td>@whisky.Name</td>
                    <td>@whisky.Age</td>
                    <td>@whisky.Year</td>
                    <td>@whisky.Country</td>
                    <td>@whisky.Region</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@whisky.Id">Details</a> |
                        <a asp-action="Edit" asp-route-id="@whisky.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@whisky.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@model UserProfileViewModel

<h2>@Model.UserName's Profile</h2>

<div>
    <h3>Your Posts</h3>
    <div class="row">
        @foreach (var post in Model.Posts)
        {
            <div class="col-md-4 mb-4">
                <div class="card" style="background-color: #3e3e3e; color: #f8f9fa;">
                    <div class="card-body">
                        <h5 class="card-title">@post.Description</h5>
                        <p class="card-text">Rating: @post.Rating</p>
                        <a asp-controller="Post" asp-action="Details" asp-route-id="@post.Id" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div>
    <a asp-controller="Post" asp-action="Create" class="btn btn-primary">Create New Post</a>
</div> 
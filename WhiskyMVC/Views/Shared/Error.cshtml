@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Oops! Something went wrong.</h1>
<h2 class="text-danger">An unexpected error occurred. Please try again later.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<h3>Need Help?</h3>
<p>
    Please contact our support team with the Request ID if the problem persists.
</p>
